{
    "$schema": "http://json-schema.org/schema",
    "$id": "component-example",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Component name",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "exampleName": {
            "type": "string",
            "description": "Example name"
        }
    },
    "required": ["name", "exampleName"]
}
